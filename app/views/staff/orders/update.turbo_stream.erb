<%# Re-render a row if it still belongs to pending/waiting, otherwise remove %>

<% if @order.pending? || @order.needs_customer_action? %>
  <%= turbo_stream.replace dom_id(@order) do %>
    <% if @order.pending? %>
      <%= render "order_row", order: @order %>
    <% else %>
      <%= render "order_row_waiting", order: @order %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.remove dom_id(@order) %>
<% end %>
