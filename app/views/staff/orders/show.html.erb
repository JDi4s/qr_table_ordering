<h1>Order #<%= @order.id %> — Table <%= @order.table.number %></h1>
<p>Status: <strong><%= @order.status %></strong></p>

<p>
  <%= link_to "← Back to Live Queue", staff_orders_path %>
</p>

<hr>

<h2>Whole Order Actions</h2>

<div style="display:flex; gap:10px; flex-wrap:wrap; margin-bottom: 16px;">
  <%= button_to "Accept Order",
        staff_order_path(@order, status: "accepted"),
        method: :patch,
        form: { data: { turbo: true } } %>

  <%= button_to "Served",
        staff_order_path(@order, status: "served"),
        method: :patch,
        form: { data: { turbo: true } } %>

  <%= form_with url: staff_order_path(@order), method: :patch, data: { turbo: true } do %>
    <%= hidden_field_tag :status, "denied" %>
    <%= text_field_tag :denial_reason, "", placeholder: "Reason", style: "width: 240px;" %>
    <%= submit_tag "Deny Order" %>
  <% end %>
</div>

<hr>

<h2>Items</h2>

<table border="1" cellspacing="0" cellpadding="6" style="width:100%;">
  <thead>
    <tr>
      <th>Item</th>
      <th>Qty</th>
      <th>Status</th>
      <th>Denial reason</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_items.each do |oi| %>
      <tr id="<%= dom_id(oi) %>">
        <td><%= oi.menu_item.name %></td>
        <td><%= oi.quantity %></td>
        <td><%= oi.status %></td>
        <td><%= oi.denial_reason %></td>
        <td style="min-width: 320px;">
          <% if oi.pending? %>
            <%= button_to "Accept item",
                  staff_order_item_path(oi, status: "accepted"),
                  method: :patch,
                  form: { data: { turbo: true } } %>

            <%= form_with url: staff_order_item_path(oi), method: :patch, data: { turbo: true } do %>
              <%= hidden_field_tag :status, "denied" %>
              <%= text_field_tag :denial_reason, "", placeholder: "Reason", style: "width: 180px;" %>
              <%= submit_tag "Deny item" %>
            <% end %>
          <% else %>
            <em>No actions</em>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
