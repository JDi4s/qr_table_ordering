<%= turbo_stream_from "menu" %>

<h1>Menu</h1>

<p>
  <%= link_to "My Orders", my_table_orders_path(@table.qr_token) %>
</p>

<%= form_with scope: :order, url: table_orders_path(@table.qr_token), method: :post, local: true do |f| %>
  <p>
    <label><strong>Notes (optional)</strong></label><br>
    <%= f.text_area :note, rows: 2, style: "width:100%; max-width:520px;" %>
  </p>

  <!-- âœ… single stable target for Turbo updates -->
  <div id="customer_menu">
    <%= render partial: "orders/menu", locals: { categories: @categories } %>
  </div>

  <button type="submit" style="padding: 8px 12px; font-size: 16px;">
    Submit Order
  </button>
<% end %>
