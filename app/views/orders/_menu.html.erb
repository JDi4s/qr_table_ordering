<% categories.each do |category| %>
  <% next unless category.available %>

  <% items = category.menu_items.select(&:available) %>
  <% next if items.empty? %>

  <h2><%= category.name %></h2>

  <% items.each do |item| %>
    <div style="margin-bottom: 10px;">
      <strong><%= item.name %></strong> ($<%= item.price %>)

      <input type="number"
             name="order[items][<%= item.id %>]"
             value="0"
             min="0"
             style="width: 70px; margin-left: 10px;">
    </div>
  <% end %>

  <hr>
<% end %>
