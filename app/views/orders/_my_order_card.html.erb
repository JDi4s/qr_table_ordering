<div id="<%= dom_id(order) %>" style="border:1px solid #ddd; padding:10px; margin:10px 0;">
  <h3>Order #<%= order.id %></h3>

  <p>Status: <strong><%= order.status %></strong></p>

  <% if order.respond_to?(:total) && order.total.present? %>
    <p>Total: <strong><%= order.total %></strong></p>
  <% end %>

  <% if order.note.present? %>
    <p><strong>Note:</strong> <%= order.note %></p>
  <% end %>

  <ul>
    <% order.order_items.each do |oi| %>
      <li>
        <%= oi.menu_item.name %> x <%= oi.quantity %>
        â€” <strong><%= oi.status %></strong>
        <% if oi.denied? && oi.denial_reason.present? %>
          (<%= oi.denial_reason %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
